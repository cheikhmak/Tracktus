<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Tracktus{% endblock %}</title>
		<link rel="stylesheet" type="text/css" href="{{asset('bundles/tracktusapp/css/main.css')}}" />
	</head>
	<body>
		<div id="header">
			<h1><a href="{{ path('homepage') }}">TracktUs</a></h1>
			<div id="user_info">
				{% if is_granted('ROLE_USER') %}
					<a href="{{ path('fos_user_security_logout') }}">Logout</a>
				{% endif %}
			</div>
			{% block header %}{% endblock %}
		</div>
		<div id="content">
			{% block content %}{% endblock %}
		</div>
		<div id="footer">
			<p>Footer</p>
			{% block footer %}{% endblock %}
		 </div>
	</body>

</html>